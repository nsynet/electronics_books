#include <iom16v.h>
/********************************************************************
                数据类型定义
*********************************************************************/
#define uchar unsigned char
#define uint  unsigned int
/**********************************************************************
				          主函数		
**********************************************************************/
void main(void)
{uchar i;
 DDRB=0xf0;                    //设置PB7输出，PB3~PB2输入
 PORTB=0x00;
 ACSR=0x00;                    //模拟比较器使能
 while(1)
  {if((ACSR&0x20)==0x20)
       PORTB=PORTB|0xf0;
   else PORTB=PORTB&0x0f;}
}
/**********************************************************************
				                 结束		
**********************************************************************/